- content_for :title do
  = t('.title')

.page-header
  %h1=t '.sign_in'

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal', :role => 'form'}) do |f|

  .form-group
    = f.label :email, class: 'col-sm-3 control-label'
    .col-sm-6
      = f.email_field :email, class: 'form-control', required: true, autofocus: true

  .form-group
    = f.label :password, class: 'col-sm-3 control-label'
    .col-sm-6
      = f.password_field :password, class: 'form-control', required: true

  - if devise_mapping.rememberable?
    .form-group
      .col-sm-offset-3.col-sm-6
        .checkbox
          %label
            = f.check_box :remember_me
            = t('.remember_me')

  .form-group
    .col-sm-offset-3.col-sm-9
      = f.submit t('.sign_in'), class: 'btn btn-primary'

= render "devise/shared/links"