- content_for :title do
  = t('.title')

.page-header
  %h1=t '.forgot_your_pwd'

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-horizontal', :role => 'form',  :method => :post }) do |f|
  = error_notification(resource) if resource.errors.any?

  .form-group
    = f.label :email, class: 'col-sm-3 control-label'
    .col-sm-6
      = f.email_field :email, class: 'form-control', required: true, autofocus: true


  .form-group
    .col-sm-offset-3.col-sm-9
      = f.submit t('.submit'), class: 'btn btn-primary'

= render "devise/shared/links"



