.form-horizontal
  .form-group
    %label(class= 'col-sm-3 control-label') &nbsp;
    .col-sm-6
      %p.form-control-static
        - if controller_name != 'sessions'
          = link_to t('.sign_in'), new_session_path(resource_name), class: "btn btn-default"
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to t('.sign_up'), new_registration_path(resource_name), class: "btn btn-default"
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to t('.forgot_your_pwd'), new_password_path(resource_name), class: "btn btn-default"
        - if devise_mapping.confirmable? && controller_name != 'confirmations'
          = link_to t('.conf_instr'), new_confirmation_path(resource_name), class: "btn btn-default"
        - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
          = link_to t('.unlck_instr'), new_unlock_path(resource_name), class: "btn btn-default"
        - if devise_mapping.omniauthable?
          - resource_class.omniauth_providers.each do |provider|
            = link_to t('.sign_in_with', name: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), class: "btn btn-default"
