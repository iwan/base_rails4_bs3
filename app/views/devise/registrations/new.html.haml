/ accounts/sign_up
- content_for :title do
  = t('.title')

.page-header
  %h1=t '.sign_up'

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal', :role => 'form'}) do |f|
  = error_notification(resource) if resource.errors.any?

  .form-group
    = f.label :email, class: 'col-sm-3 control-label'
    .col-sm-6
      = f.email_field :email, class: 'form-control', required: true, autofocus: true

  .form-group
    = f.label :password, class: 'col-sm-3 control-label'
    .col-sm-6
      = f.password_field :password, class: 'form-control', required: true

  .form-group
    = f.label :password_confirmation, class: 'col-sm-3 control-label'
    .col-sm-6
      = f.password_field :password_confirmation, class: 'form-control', required: true


  .form-group
    .col-sm-offset-3.col-sm-9
      = f.submit t('.sign_up_button'), class: 'btn btn-primary'

= render "devise/shared/links"