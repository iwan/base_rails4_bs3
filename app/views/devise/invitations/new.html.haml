- content_for :title do
  = t('.title')

.page-header
  %h1=t '.invitation_title'

= form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:class => 'form-horizontal', :role => 'form',  :method => :post }) do |f|
  = error_notification(resource) if resource.errors.any?
  = f.hidden_field :invitation_token

  - resource.class.invite_key_fields.each do |field|
    = f.label field, class: 'col-sm-3 control-label'
    .col-sm-6
      = f.text_field field, class: 'form-control', autocomplete: "off"

  .form-group
    .col-sm-offset-3.col-sm-9
      = f.submit t('.submit'), class: 'btn btn-primary'

