/ Fixed navbar
.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"}= Rails.configuration.navbar_brand
    .navbar-collapse.collapse

      - if account_signed_in?
        %ul.nav.navbar-nav
          %li= link_to t('.users'), users_path

        %ul.nav.navbar-nav.navbar-right
          %li
            %button.btn.btn-danger.navbar-btn{:onclick => "window.location.href='#{destroy_account_session_url}'"}= t('.sign_out')

      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            %button.btn.btn-info.navbar-btn{:onclick => "window.location.href='#{new_account_session_url}'"}= t('.sign_in')
